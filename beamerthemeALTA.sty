\DeclareOptionBeamer{citecolor}{%
	\hypersetup{colorlinks,linkcolor=black,urlcolor=black,citecolor=black,anchorcolor=black}%
	\let\@mycite\@cite
	\def\@cite##1##2{{%
		\hypersetup{linkcolor=#1}[{##1\if@tempswa , ##2\fi}]}}
}

\def\beamer@alta@linkcolor{black}
\def\beamer@alta@urlcolor{black}

\DeclareOptionBeamer{linkcolor}{%
	\def\beamer@alta@linkcolor{#1}
	\hypersetup{colorlinks,linkcolor=#1,urlcolor=\beamer@alta@urlcolor,citecolor=black,anchorcolor=black}%
}

\DeclareOptionBeamer{urlcolor}{%
